@NonCPS
boolean isMyDirChanged() {
  for (changeLogSet in currentBuild.changeSets) { 
    for (entry in changeLogSet.getItems()) { // for each commit in the detected changes
      for (file in entry.getAffectedFiles()) {
        println(file.getPath() + ":lafa;sdlifjadoifj")
        if (file.getPath().matches("src/adservice(/.*)")) {
          println("Hey it worked")
          return true
        }
      }
    }
  }
  return false
} 

// environment {
//   SCANNER_HOME = tool 'sonar-scanner'
// }

def SCANNER_HOME = tool 'sonar-scanner'


node {

    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Build image') {
       if (isMyDirChanged()) {
          app = docker.build("wpatterson134/adservice", "-f ./src/adservice/Dockerfile ./src/adservice")
        } else {
            currentBuild.result = "SUCCESS"
            return
    }
}
    if (currentBuild.result == "SUCCESS") {
        return
    }

    stage('Test image') {
  

        //app.inside {
            // withSonarQubeEnv('sonar') {
            //   sh ''' $SCANNER_HOME/bin/sonar-scanner -Dsonar.projectKey=adservice-buildimage -Dsonar.projectName=adservice-buildimage -Dsonar.java.binaries=. '''
            // }
            script {
                    sh "$SCANNER_HOME/bin/sonar-scanner \
                        -Dsonar.projectKey=adservice-buildimage \
                        -Dsonar.projectName=adservice-buildimage \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://ec2-54-164-130-15.compute-1.amazonaws.com:9000 \
                        -Dsonar.login=squ_7d75be805d0b922368ff51ba54c1614972f45671"
                }
            
        //}
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push("${env.BUILD_NUMBER}")
        }
    }
    
    stage('Trigger ManifestUpdate') {
                echo "triggering updatemanifestjob"
                build job: 'adservice-updatemanifest', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
        }
}
