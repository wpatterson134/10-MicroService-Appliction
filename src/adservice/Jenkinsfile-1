node {

    def app

    stage('Clone repository') {
      

        checkout scm
    }

    stage('Build image') {
        app = docker.build("wpatterson134/adservice", "-f ./src/adservice/Dockerfile ./src/adservice")
       /* if (isMyDirChanged()) {

          app = docker.build("wpatterson134/adservice", "-f ./src/adservice/Dockerfile .")
        } else {
            currentBuild.result = "SUCCESS"
            return
    }*/
}
    if (currentBuild.result == "SUCCESS") {
        return
    }

    stage('Test image') {
  

        app.inside {
            sh 'echo "Tests passed"'
        }
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push("${env.BUILD_NUMBER}")
        }
    }
    
    stage('Trigger ManifestUpdate') {
                echo "triggering updatemanifestjob"
                build job: 'adservice-updatemanifest', parameters: [string(name: 'DOCKERTAG', value: env.BUILD_NUMBER)]
        }
}
